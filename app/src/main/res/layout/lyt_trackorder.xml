<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10dp"
    >

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:outlineProvider="background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtorderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/txt_color"
        app:layout_constraintBottom_toTopOf="@+id/txtorderamount"
        app:layout_constraintStart_toEndOf="@id/img_order"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tool:text="Order No 14" />

    <TextView
        android:id="@+id/txtorderamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/txt_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_order"
        app:layout_constraintTop_toBottomOf="@+id/txtorderid"
        tool:text="$1200" />

    <TextView
        android:id="@+id/txtorderdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_bold"
        tool:text="Date 12/03/2022"
        app:layout_constraintTop_toTopOf="@+id/txtorderamount"
        app:layout_constraintBottom_toBottomOf="@+id/txtorderamount"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

