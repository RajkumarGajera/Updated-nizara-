<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    android:focusable="true">

    <Button
        android:id="@+id/startdate_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Starting Date"/>

    <TextView
        android:id="@+id/startdate_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Starting Date:"
        android:layout_marginTop="@dimen/_60sdp"/>

    <Button
        android:id="@+id/enddate_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Ending Date"
        android:layout_marginTop="@dimen/_200sdp"/>

    <TextView
        android:id="@+id/enddate_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Ending Date:"
        android:layout_marginTop="@dimen/_260sdp"/>

    <Button
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Apply"
        android:layout_marginTop="@dimen/_300sdp"/>

</RelativeLayout>